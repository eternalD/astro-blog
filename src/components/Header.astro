---
import { Image } from 'astro:assets';
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2 class="site-icon"><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/blog">Blogi</HeaderLink>
			<HeaderLink href="/minusta">Minusta</HeaderLink>
		</div>	
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 .5rem;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	
	h2 {
		margin: 0;
		
		font-size:var(--fluid-16-24);
		line-height: 1.2;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	
	
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	nav a {
		padding: 1.5rem .35rem 1.25rem .35rem;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
		font-size:var(--fluid-13-18);	
	}

	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}

	@media (prefers-color-scheme: dark) {
		header {
			background:#1b1b1b;
			border-bottom: 1px solid rgba(255,255,255,0.6);
		}

		header a {
			color:#fff;
			
		}

		header a:hover {
			color:#fff;
			text-decoration: underline;
		}

		nav a.active {
			border-bottom-color: #fff;
		}

	}

</style>
